<form id="login">
    <table>
        <tr>
            <td>
                {uName_string}
            </td>
            <td>
                <input type="text" name="uName" />
            </td>
        </tr>
        <tr>
            <td>
                {uPass_string}
            </td>
            <td>
                <input type="password" name="uPass" />
            </td>
        </tr>
        <tr>
            <td>
                <input type="submit" name="uSubmit" value="{uSubmit_string}" />
            </td>
        </tr>
</form>